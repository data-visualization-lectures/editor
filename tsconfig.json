{
  "compilerOptions": {
    "target": "ES2024",
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts*",
    "test/**/*.ts*"
  ]
}